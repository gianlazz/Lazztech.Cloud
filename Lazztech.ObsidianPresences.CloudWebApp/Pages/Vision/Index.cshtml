@page
@model Lazztech.ObsidianPresences.CloudWebApp.Pages.Vision.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h4>New Data</h4>
    <hr>
    <div class="row">
        <div class="col text-center">
            <a href="#" class="btn btn-primary">Upload new photos to be recognized</a>
        </div>
        <div class="col text-center">
            <a href="#" class="btn btn-primary">Process new snapshot</a>
        </div>
    </div>
    <br />
</div>

<div class="container">
    <div class="row">
        <div class="col">
            <h4>Processed Snapshots</h4>
            <hr>

            <div class="row">
                @*@foreach (var snap in Model.Snapshots)*@
                @for (int i = 0; i < Model.Snapshots.Count(); i++)
                {
                    foreach (var person in Model.Snapshots[i].People)
                    {
                        @*if (i > 0 && i % 2 == 0)
                            {
                                // CLOSE AND START A NEW ROW
                                @:</div>
                                @:<br />
                                @:<div class="row">
                            }*@

                        <div class="col-md-4">
                            @*<div class="col-md-6 d-flex align-items-stretch">*@
                            <div class="card">
                                <canvas id="canvas" width="300" height="300">
                                    Sorry, your browser doesn't support the &lt;canvas&gt; element.
                                </canvas>
                                <img class="card-img-top" src="@Model.Snapshots[i].ImageDir" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title">@Model.Snapshots[i].DateTimeWhenCaptured.ToString()</h5>
                                    <p class="card-text">@person.Name</p>
                                    @*<p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>*@
                                    <a href="#" class="btn btn-primary">Show All Occurences</a>
                                </div>
                            </div>
                            <br />
                        </div>
                    }
                }
            </div>
            <script>$(document).ready(function () {

                    var c = document.getElementById("canvas");
                    var ctx = c.getContext("2d");
                    ctx.beginPath();
                    ctx.arc(95, 50, 40, 0, 2 * Math.PI);
                    ctx.stroke();

                });</script>
        </div>
    </div>
</div>