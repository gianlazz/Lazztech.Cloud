@page
@model Lazztech.Cloud.ClientFacade.Pages.Admin.EventManagement.MentorInvitesModel
@{
    ViewData["Title"] = "MentorInvites";
}

<h2>Mentor Invites</h2>
<hr />
<h4>Invite New Mentor</h4>

<form method="post">
    @*<div asp-validation-summary="ModelOnly" class="text-danger">*@
    <div class="form-group">
        <label asp-for="NewInvite.EventId" class="control-label"></label>
        <select asp-for="NewInvite.EventId" class="form-control" asp-items="ViewBag.EventId"></select>
    </div>
    <div class="form-group">
        <label asp-for="NewInvite.Email" class="custom-control-label"></label>
        <input asp-for="NewInvite.Email" class="form-control" />
        <span asp-validation-for="NewInvite.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewInvite.PhoneNumber" class="custom-control-label"></label>
        <input asp-for="NewInvite.PhoneNumber" class="form-control" />
        <span asp-validation-for="NewInvite.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Send Invite" class="btn btn-default" />
    </div>
    @*</div>*@
</form>

<h4>Sent</h4>

<div class="row">
    <div class="col">
        <table class="table table-striped table-dark table-responsive-sm">
            <thead>
                <tr>
                    <th>Created</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Opened At</th>
                    <th>Accepted</th>
                    <th>Link</th>
                    <th>Resend</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var invite in Model.Invites.OrderByDescending(x => x.DateTimeWhenCreated))
                {
                    <tr>
                        <td>@invite.DateTimeWhenCreated</td>
                        <td>@invite.Email</td>
                        <td>@invite.PhoneNumber</td>
                        <td>@invite.DateTimeWhenViewed</td>
                        <td>@invite.Accepted</td>
                        <td><a href="@invite.InviteLink">@invite.InviteLink</a></td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>