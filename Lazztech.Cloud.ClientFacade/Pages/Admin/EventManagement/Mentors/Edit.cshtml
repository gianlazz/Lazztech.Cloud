@page
@model Lazztech.Cloud.ClientFacade.Pages.Admin.EventManagement.Mentors.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Mentor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Photo" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Photo" type="file" class="form-control" style="height:auto" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
            </div>
            <input type="hidden" asp-for="Mentor.MentorId" />
            <div class="form-group">
                <label asp-for="Mentor.FirstName" class="control-label"></label>
                <input asp-for="Mentor.FirstName" class="form-control" />
                <span asp-validation-for="Mentor.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mentor.LastName" class="control-label"></label>
                <input asp-for="Mentor.LastName" class="form-control" />
                <span asp-validation-for="Mentor.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mentor.Image" class="control-label"></label>
                <input asp-for="Mentor.Image" class="form-control" />
                <span asp-validation-for="Mentor.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mentor.Description" class="control-label"></label>
                <input asp-for="Mentor.Description" class="form-control" />
                <span asp-validation-for="Mentor.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mentor.ProfessionalTitle" class="control-label"></label>
                <input asp-for="Mentor.ProfessionalTitle" class="form-control" />
                <span asp-validation-for="Mentor.ProfessionalTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mentor.PhoneNumber" class="control-label"></label>
                <input asp-for="Mentor.PhoneNumber" class="form-control" />
                <span asp-validation-for="Mentor.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mentor.Email" class="control-label"></label>
                <input asp-for="Mentor.Email" class="form-control" />
                <span asp-validation-for="Mentor.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="custom-checkbox">
                    <label>
                        <input asp-for="Mentor.IsAvailable" /> @Html.DisplayNameFor(model => model.Mentor.IsAvailable)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="custom-checkbox">
                    <label>
                        <input asp-for="Mentor.IsPresent" /> @Html.DisplayNameFor(model => model.Mentor.IsPresent)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Mentor.EventId" class="control-label"></label>
                <select asp-for="Mentor.EventId" class="form-control" asp-items="ViewBag.EventId"></select>
                <span asp-validation-for="Mentor.EventId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
