@page
@model Lazztech.Cloud.ClientFacade.Pages.Admin.EventManagement.IndexModel
@{
    ViewData["Title"] = "Index";
    var properties = typeof(Lazztech.Events.Dto.Models.SmsDto).GetProperties();
}

<h2>Event Dashboard</h2>
<br />
<br />
<div class="row">
    <div class="col">
        <h3>Organizations</h3>
        <p>
            Count: @Model.OrganizationCount
        </p>
        <a class="btn btn-dark" href="./Mentors" role="button">Manage Organizations</a>
    </div>
    <div class="col">
        <h3>Events</h3>
        <p>
            Count: @Model.EventCount
        </p>
        <a class="btn btn-dark" href="./Mentors" role="button">Manage Events</a>
    </div>
    <div class="col">
        <h3>Mentors</h3>
        <p>
            Count: @Model.MentorCount
        </p>
        <a class="btn btn-dark" href="./Mentors" role="button">Manage Mentors</a>
    </div>
    <div class="col">
        <h3>Mentor Requests</h3>
        <p>
            Count: @Model.MentorRequestCount
        </p>
        <a class="btn btn-dark" href="./MentorInvites" role="button">Mentor Invites</a>
    </div>
    <div class="col">
        <h3>Mentor Invites</h3>
        <p>
            Count: @Model.MentorInviteCount
        </p>
        <a class="btn btn-dark" href="./MentorInvites" role="button">Mentor Invites</a>
    </div>
</div>
<br />
<hr>

<h2>Events</h2>
<br />
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Location</th>
            <th scope="col">Date</th>
            <th scope="col">Manage</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">1</th>
            <td>Seatle Eastside</td>
            <td>@DateTime.Now</td>
            <td>
                <a class="btn btn-dark" href="/Events/Admin" role="button">Admin</a>
                <a class="btn btn-dark" href="/Events/Event" role="button">Go To Event</a>
            </td>
        </tr>
    </tbody>
</table>

<h2>10 Recent Sms Messages</h2>
<br />
<div class="row">
    <div class="col">
        @using (Html.BeginForm())
        {
            <table class="table table-striped table-dark table-responsive">
                <thead>
                    <tr>
                        @{
                            foreach (var property in properties)
                            {
                                <th>@property.Name</th>
                            }
                        }
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var sms in Model.Messages)
                        {
                            <tr>
                                @foreach (var value in sms.GetType().GetProperties())
                                {
                                    <td>@value.GetValue(sms, null)</td>
                                }
                            </tr>
                        }
                    }
                </tbody>
            </table>
        }
    </div>
</div>