@page
@model Lazztech.Cloud.ClientFacade.Pages.Event.InvitesModel
@{
    ViewData["Title"] = "Invites";
}

<h2>Register</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Photo" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Photo" type="file" class="form-control" style="height:auto" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
            </div>
            <input type="hidden" asp-for="Invite.MentorInviteId" />
            <input type="hidden" asp-for="Invite.MentorId" />
            <input type="hidden" asp-for="Invite.Mentor.MentorId" />
            <input type="hidden" asp-for="Invite.Mentor.EventId" />
            <div class="form-group">
                <label asp-for="Invite.Mentor.FirstName" class="control-label"></label>
                <input asp-for="Invite.Mentor.FirstName" class="form-control" />
                <span asp-validation-for="Invite.Mentor.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invite.Mentor.LastName" class="control-label"></label>
                <input asp-for="Invite.Mentor.LastName" class="form-control" />
                <span asp-validation-for="Invite.Mentor.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invite.Mentor.Description" class="control-label"></label>
                <input asp-for="Invite.Mentor.Description" class="form-control" />
                <span asp-validation-for="Invite.Mentor.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invite.Mentor.ProfessionalTitle" class="control-label"></label>
                <input asp-for="Invite.Mentor.ProfessionalTitle" class="form-control" />
                <span asp-validation-for="Invite.Mentor.ProfessionalTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invite.Mentor.PhoneNumber" class="control-label"></label>
                <input asp-for="Invite.Mentor.PhoneNumber" class="form-control" />
                <span asp-validation-for="Invite.Mentor.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invite.Mentor.Email" class="control-label"></label>
                <input asp-for="Invite.Mentor.Email" class="form-control" />
                <span asp-validation-for="Invite.Mentor.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>