{
   // Use IntelliSense to find out which attributes exist for C# debugging
   // Use hover for the description of the existing attributes
   // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
   "version": "0.2.0",
   "configurations": [
       {
           "name": ".NET Core Launch Pomodoro (console)",
           "type": "coreclr",
           "request": "launch",
           "preLaunchTask": "build",
           "program": "${workspaceRoot}/Lazztech.Pomodoro/bin/Debug/netcoreapp2.1/Lazztech.Pomodoro.dll",
           "args": [],
           "cwd": "${workspaceRoot}",
           "stopAtEntry": false,
           "console": "internalConsole"
       },
       {
           "name": ".NET Core Docker Debugger Remote Attach",
           "type": "coreclr",
           "request": "attach",
           "processId": "${command:pickRemoteProcess}",
        //    "preLaunchTask": "preDockerDebug",
           "pipeTransport": {
               "pipeCwd": "${workspaceRoot}",
               "pipeProgram": "docker",
            // TODO: put your container name instead of CONTAINER_NAME
               "pipeArgs": [
               "exec", "-i", "lazztechobsidianpresences_lazztech.obsidianpresenses.vision.microservice.cli_1"
                ],
                  // not important in this case but useful anyway 
                "requireExactSource": false,
                // where to pick symbols, not needed in this case
                "symbolPath": [
                    "${workspaceRoot}/bin/Debug/netcoreapp2.0"
                ],
            //    "debuggerPath": "enter the path for the debugger on the target machine, for example ~/vsdbg/vsdbg",
               "debuggerPath": "~/vsdbg/vsdbg",
               "quoteArgs": false
           },
           "justMyCode": false,
             // pause debugger at entrance
            // "stopAtEntry": true
       },
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/Lazztech.ObsidianPresenses.Vision.Microservice.Cli/bin/Debug/netcoreapp2.1/Lazztech.ObsidianPresenses.Vision.Microservice.Cli.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Lazztech.ObsidianPresenses.Vision.Microservice.Cli",
            // For more information about the 'console' field, see https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md#console-terminal-window
            "console": "internalConsole",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ,]
}