@page
@model Lazztech.ObsidianPresences.ClientFacade.Pages.Events.Admin.Teams.EditModel
@using HackathonManager;

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Team.Id" />
            <div class="form-group">
                <label asp-for="Team.Name" class="control-label"></label>
                <input asp-for="Team.Name" class="form-control" />
                <span asp-validation-for="Team.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.Location" class="control-label"></label>
                <select asp-for="Team.Location" asp-items="@Html.GetEnumSelectList<RoomNameEnum>()" class="form-control"></select>
                <span asp-validation-for="Team.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.PinNumber" class="control-label"></label>
                <input asp-for="Team.PinNumber" class="form-control" />
                <span asp-validation-for="Team.PinNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
